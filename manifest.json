{
    "manifest_version": 3,
    "name": "PaperMind - AI Research Assistant",
    "version": "1.0.0",
    "description": "Transform dense research papers into interactive summaries using Chrome's built-in AI",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://arxiv.org/*",
        "https://*.arxiv.org/*",
        "https://scholar.google.com/*",
        "https://*.scholar.google.com/*",
        "https://www.nature.com/*",
        "https://*.nature.com/*",
        "https://www.science.org/*",
        "https://*.science.org/*",
        "https://link.springer.com/*",
        "https://*.link.springer.com/*",
        "https://ieeexplore.ieee.org/*",
        "https://*.ieeexplore.ieee.org/*",
        "https://acm.org/*",
        "https://*.acm.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://arxiv.org/*",
                "https://*.arxiv.org/*",
                "https://scholar.google.com/*",
                "https://*.scholar.google.com/*",
                "https://www.nature.com/*",
                "https://*.nature.com/*",
                "https://www.science.org/*",
                "https://*.science.org/*",
                "https://link.springer.com/*",
                "https://*.link.springer.com/*",
                "https://ieeexplore.ieee.org/*",
                "https://*.ieeexplore.ieee.org/*",
                "https://acm.org/*",
                "https://*.acm.org/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "PaperMind AI Assistant"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "panel.html",
                "panel.js",
                "panel.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}